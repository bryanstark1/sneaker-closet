<%- include('../partials/header') %>

<h1><%= title %></h1>
<form action="/sneakers" method="POST">
  <label>Model
    <input type="text" name="model" placeholder="Sneaker Brand & Model">
  </label>
  <label>Name
    <input type="text" name="name" placeholder="Sneaker Nickname">
  </label>
  <label>Colorway
    <input type="text" name="color" placeholder="Color Combination">
  </label>
  <label>Release Date
    <input type="date" name="release">
  </label>
  <label>Retail Price
    <input type="number" name="retail" placeholder="0">
  </label>
  <label>SKU Number
    <input type="text" name="sku">
  </label>
  <label>Image URL
    <input type="text" name="image" placeholder="Link to image URL">
  </label>
  <button type="submit">Submit</button>
</form>

<p><%= err.message %></p>

<%- include('../partials/footer') %>