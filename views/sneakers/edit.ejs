<%- include('../partials/header') %>

<h1><%= title %></h1>

<p class="tip">Reference <a href="https://thesneakerdatabase.com/sneakers" style="text-decoration: underline" target="_blank">The Sneaker Database</a> for accurate sneaker data!</p>

<form action="/sneakers/<%= sneaker.id %>?_method=PUT" method="POST" class="sneaker-form">
  <label>Model
    <input type="text" name="model" placeholder="Sneaker Brand & Model" value="<%= sneaker.model %>" required>
  </label>
  <label>Name
    <input type="text" name="name" placeholder="Sneaker Nickname" value="<%= sneaker.name %>" required>
  </label>
  <label>Colorway
    <input type="text" name="color" placeholder="Color Combination" value="<%= sneaker.color %>" required>
  </label>
  <% const year = sneaker.release.getFullYear(); %>
  <% let month = sneaker.release.getMonth(); %>
  <% if (month <= 8 ) { %>
    <% month = ('0' + (month + 1)); %>
  <% } else { %>
    <% month = (month + 1); %>
  <% }; %>
  <% let day = sneaker.release.getDate(); %>
  <% if (day <= 8 ) { %>
    <% day = ('0' + (day + 1)); %>
  <% } else { %>
    <% day = (day + 1); %>
  <% }; %>
  <label>Release Date
    <input type="date" name="release" value="<%= year %>-<%= month %>-<%= day %>" required>
  </label>
  <label>Retail Price
    <input type="number" name="retail" placeholder="0" value="<%= sneaker.retail %>" required>
  </label>
  <label>SKU Number
    <input type="text" name="sku" value="<%= sneaker.sku %>" required>
  </label>
  <label>Image URL
    <input type="text" name="image" placeholder="Link to image URL" value="<%= sneaker.image %>">
  </label>
  <div class="btn-container">
    <button type="submit" class="button">Submit</button>
    <button type="reset" class="button">Reset Form</button>
  </div>
</form>

<%- include('../partials/footer') %>